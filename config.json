{
  "rate_limit": {
    "enabled": true,
    "requests_per_second": 1000,
    "burst_size": 100
  },
  "circuit_breaker": {
    "enabled": true,
    "failure_threshold": 5,
    "recovery_timeout_secs": 30,
    "half_open_max_calls": 3
  },
  "retry": {
    "enabled": true,
    "max_attempts": 3,
    "backoff_base_ms": 100,
    "backoff_max_ms": 5000
  },
  "timeout": {
    "connect_timeout_secs": 5,
    "request_timeout_secs": 30
  },
  "upstreams": [
    "127.0.0.1:8080"
  ]
}